<beans>

	<bean id="org.etudes.mneme.tool.ImportQtiView"
			class="org.etudes.mneme.tool.ImportQtiView"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

 		<property name="ui"><ref bean="org.etudes.ambrosia.api.UiService"/></property>
  		<property name="importQtiService"><ref bean="org.etudes.mneme.api.ImportQtiService"/></property>
  		<property name="importQti2Service"><ref bean="org.etudes.mneme.api.ImportQti2Service"/></property>
  		<property name="poolService"><ref bean="org.etudes.mneme.api.PoolService"/></property>
  		<property name="toolManager"><ref bean="org.sakaiproject.tool.api.ToolManager"/></property>
 
 		<property name="toolId"><value>sakai.mneme</value></property>
 		<property name="path"><value>import_qti</value></property>
 		<property name="bundle"><value>importQti</value></property>
		<property name="shared"><value>mneme</value></property>
		<property name="components"><value>importQti.xml</value></property>
 		<property name="docsPath"><value>/private/mneme/{CONTEXT}/docs/</value></property>
	</bean>

</beans>
