<beans>

	<bean id="org.etudes.mneme.tool.DrawQuestionsView"
			class="org.etudes.mneme.tool.DrawQuestionsView"
			init-method="init"
			destroy-method="destroy"
			singleton="true">

 		<property name="ui"><ref bean="org.etudes.ambrosia.api.UiService"/></property>
  		<property name="toolManager"><ref bean="org.sakaiproject.tool.api.ToolManager"/></property>
 		<property name="assessmentService"><ref bean="org.etudes.mneme.api.AssessmentService"/></property>
 		<property name="poolService"><ref bean="org.etudes.mneme.api.PoolService"/></property>
 		<property name="questionService"><ref bean="org.etudes.mneme.api.QuestionService"/></property>
 
 		<property name="toolId"><value>sakai.mneme</value></property>
 		<property name="path"><value>draw_questions</value></property>
 		<property name="bundle"><value>drawQuestions</value></property>
 		<property name="shared"><value>mneme</value></property>
		<property name="components"><value>drawQuestions.xml</value></property>
 		<property name="docsPath"><value>/private/mneme/{CONTEXT}/docs/</value></property>
	</bean>

</beans>
