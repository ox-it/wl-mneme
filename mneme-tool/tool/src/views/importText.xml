<interface>

	<!--mode bar-->
	<modeContainer>
		<alias to="ToolModeFragment" toolId="sakai.mneme" />
	</modeContainer>

	<title>
		<message selector="import-text-title" />
	</title>

	<header>
		<message selector="import-text-header">
			<model type="icon" icon="/icons/add_qst.png" />
		</message>
	</header>

	<container>

		<!-- instructions overlay -->
		<overlay id="instructions">
			<container>
				<instructions>
					<message selector="instructions">
					</message>
				</instructions>
				<gap />
				<toggle target="instructions" title="close" style="LINK">
					<icon icon="/icons/close.png" style="LEFT" />
				</toggle>
			</container>
		</overlay>

		<!-- toggle to show instructions -->
		<toggle target="instructions" title="view-instructions" style="LINK">
			<icon icon="/icons/test.png" style="LEFT" />
		</toggle>

		<section>
			<container>
				<textEdit title="paste-message" rows="20" cols="60">
					<model type="text" ref="text.value" />
				</textEdit>
			</container>
		</section>

		<!--navigation-->
		<navigationBar>
			<container>
				<navigation title="ok" style="BUTTON" accessKey="ok-access" description="ok-description" submit="TRUE">
					<icon icon="/icons/OK.png" style="LEFT" />
					<destination template="IMPORT" />
				</navigation>
				<divider />
				<navigation title="cancel" style="BUTTON" accessKey="cancel-access" description="cancel-description">
					<icon icon="/icons/cancel.gif" style="LEFT" />
					<destination template="/pools/{0}">
						<model ref="poolsSort" />
					</destination>
				</navigation>
			</container>
		</navigationBar>

	</container>
</interface>
